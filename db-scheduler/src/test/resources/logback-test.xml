<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) [%-7.7thread] %cyan(%logger{50}) - %msg%n%rootException</pattern>
        </encoder>
    </appender>

    <logger level="INFO" name="com.github.kagkarlsson.scheduler"/>
    <logger level="DEBUG" name="com.github.kagkarlsson.jdbc.JdbcRunner"/>
    <logger level="DEBUG" name="net.ttddyy.dsproxy"/>
    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
